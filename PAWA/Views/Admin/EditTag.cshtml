@model PAWA.Models.Tags

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {

    <fieldset>

        @Html.HiddenFor(model => model.TagsID )

        <div class="editor-label">
            @Html.LabelFor(model => model.TagName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TagName)
            @Html.ValidationMessageFor(model => model.TagName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Status, new SelectList(Enum.GetValues(typeof(PAWA.Models.Status))),new{style = "width: 75px"})
            @Html.ValidationMessageFor(model => model.Status)
        </div>
          <div class="editor-label">
            @Html.LabelFor(model => model.UserSuggest)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Status, new SelectList(Enum.GetValues(typeof(PAWA.Models.UserSuggest))),new{style = "width: 75px"})
            @Html.ValidationMessageFor(model => model.UserSuggest)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

