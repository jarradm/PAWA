@model PAWA.Models.User

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_AdminSiteLayout.cshtml";
}

<link rel="stylesheet" href="~/App_Themes/CreateUser.css" />
<script>
    $(document).ready(function () {
        $("#DateOfBirth").datepicker({ dateFormat: 'yy-mm-dd', changeMonth: true, changeYear: true, yearRange: "1900:nn" });
    });
</script>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div id="outer-panel">
        <div id="main-panel">
            <div id="panel-header" style="font-family: Constantia"><b>Edit User</b></div>
            <div id="inner-panel">
    <fieldset>
        <legend>User</legend>

                    @Html.ValidationMessageFor(model => model.Username)
                    <div class="editor-label">
                        @Html.Label("User Name")
                        @Html.EditorFor(model => model.Username)
                    </div>

                    @Html.ValidationMessageFor(model => model.Password)
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Password)
                        @Html.PasswordFor(model => model.Password, new { @class="text-box" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Email)
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email)
                    </div>

                    @Html.ValidationMessageFor(model => model.Status)
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Status)
                        @Html.DropDownListFor(model => model.Status, new SelectList(Enum.GetValues(typeof(PAWA.Models.Status))),new{style = "width: 75px"})
                    </div>

                    @Html.ValidationMessageFor(model => model.Country)
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Country)
                        @Html.DropDownListFor(m => m.Country, (IEnumerable<SelectListItem>)ViewBag.CountryList)
                    </div>

                    @Html.ValidationMessageFor(model => model.DateOfBirth)
                    <div class="editor-label">
                        @Html.Label("Date Of Birth")
                        @Html.EditorFor(model => model.DateOfBirth)
                    </div>
                    <div class="radio-label">
                        @Html.LabelFor(model => model.Gender)
                        <div id="radio-male">
                            @Html.RadioButtonFor(model => model.Gender, "Male", new { id = "male", @checked = "checked" })
                            @Html.Label("male", "Male")
                        </div>
                        <div id="radio-female">
                            @Html.RadioButtonFor(model => model.Gender, "Female", new { id = "female" })
                            @Html.Label("female", "Female")
                        </div>
                    </div>
                     @Html.HiddenFor(model => model.JoinDateTime)

        @Html.HiddenFor(model => model.UserID)

        
            @Html.HiddenFor(model => model.JoinDateTime)
            <input type="submit" value="Save" />
    </fieldset>
                <div>
    @Html.ActionLink("Back to List", "UserManagement")
</div>
</div>
</div>
</div>
}

