@model PAWA.Models.Folder

@{
    ViewBag.Title = "EditFolder";
}

<h2>Edit Folder</h2>

@using (Html.BeginForm("EditFolder", "Folder", FormMethod.Post))
{
    <fieldset>
        <legend>Folder</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.InFolderID, "Location")
        </div>
        <div class="editor-field">
            
        <select name="InFolderID" id="folderList">
            @{
                PAWA.Classes.GetFolderFormSelectOptions pwa = new PAWA.Classes.GetFolderFormSelectOptions(WebSecurity.CurrentUserId);
                @Html.Raw(pwa.returnHTML);
            }
        </select> 
            @*Html.DropDownList("InFolderID", "Album Home")*@
            @Html.ValidationMessageFor(model => model.InFolderID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FolderName)
        </div>
        <div class ="editor-field">
            @Html.EditorFor(model => model.FolderName)
			@Html.ValidationMessageFor(model => model.FolderName)
        </div>
       <input type="hidden" name="fid" value="@ViewBag.fid" />

        @Html.ValidationMessage("InFError")

        <p>
            <input type="submit" name="saveChanges" value="Save" />
            <input type="submit" name="cancelChanges" value="Cancel" onclick="cancelChanges(event)"/>
        </p>
        <script>
        </script>
    </fieldset>
}