                <div id="inner-panel">
                    @Html.Label(Model.IncorrectLogin, new { @class="field-validation-error" })
                    @Html.ValidationMessageFor(model => model.IncorrectLogin)
                    @Html.ValidationMessageFor(model => model.Username)
            <div>
            Username: <input type="text" class="textbox" name="Username" />
            </div>
                    @Html.ValidationMessageFor(model => model.Password)
            <div>
            Password: <input type="password" class="textbox" name="Password" />
            </div>
   <center>&nbsp&nbsp&nbsp&nbsp<button type="button" class="buttonlogin" style="width: 74px; height: 23px; font-style: italic; font: message-box" onclick="GoToCreateUser()">Register</button>
         
